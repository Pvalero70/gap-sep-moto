<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="sale_order_paymenttemrn_readonly_form" model="ir.ui.view">
        <field name="name">sale.order.paymenttemrn.readonly.form</field>
        <field name="model">sale.order</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='payment_term_id']" position="before">
                <field name="payment_terms_permission" invisible="1"/>
            </xpath>

            <xpath expr="//field[@name='payment_term_id']" position="attributes">
                <attribute name="attrs">{'readonly':[('payment_terms_permission', '=', False)]}
                </attribute>
            </xpath>



        </field>
    </record>




</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- VIEWS -->
    <record id="view_seller_commission_form" model="ir.ui.view">
        <field name="name">view.seller_commission.form</field>
        <field name="model">seller.commission</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="to_pay,paid"/>
                </header>
                <sheet>
                    <h2>Comision de vendedor</h2>
                    <group>
                        <group>
                            <field name="seller_id"/>
                            <field name="company_id"/>
                        </group>
                        <group>
                            <field name="current_month"/>
                            <field name="amount_total"/>
                        </group>
                        <field name="line_ids">
                            <tree editable="botttom">
                                <field name="comm_method"/>
                                <field name="commission_date"/>
                                <field name="amount"/>
                                <field name="invoice_id"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_seller_commission_tree" model="ir.ui.view">
        <field name="name">view.seller_commission.tree</field>
        <field name="model">seller.commission</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <tree string="Comisiones de ejecutivos de ventas">
                <field name="seller_id"/>
                <field name="amount_total"/>
                <field name="current_month"/>
                <field name="state"/>
                <field name="company_id"/>
                <field name="commission_quantity_lines"/>
            </tree>
        </field>
    </record>

    <record id="view_seller_commission_rules_tree" model="ir.ui.view">
        <field name="name">view.seller_commission_rule.tree</field>
        <field name="model">seller.commission.rule</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <tree string="Reglas para el calculo de comisiones por ventas" editable="top">
                <field name="name"/>
                <field name="calc_method"/>
                <field name="amount_factor"/>
                <field name="company_id" invisible="1"/>
                <field name="product_categ_ids" widget="many2many_tags" domain="[('parent_id', '=', False)]"/>
                <field name="amount_start"/>
            </tree>
        </field>
    </record>


    <!-- ACTIONS -->
    <record id="action_own_seller_commission" model="ir.actions.act_window">
        <field name="name">Own seller commision</field>
        <field name="res_model">seller.commission</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="domain">[('seller_id.user_id', '=', uid), ('seller_id.company_id', '=', allowed_company_ids[0])]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            Sin comisiones
            </p>
        </field>
    </record>

    <record id="action_all_seller_commission" model="ir.actions.act_window">
        <field name="name">All seller commision</field>
        <field name="res_model">seller.commission</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="domain">[('seller_id.company_id', '=', allowed_company_ids[0])]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            Sin comisiones
            </p>
        </field>
    </record>

    <record id="action_seller_commission_rules" model="ir.actions.act_window">
        <field name="name">Seller commision rules</field>
        <field name="res_model">seller.commission.rule</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="domain">[('company_id', '=', allowed_company_ids[0])]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            Sin reglas
            </p>
        </field>
    </record>

    <!-- MENUS -->
    <menuitem
            id="own_commissions_menu"
            name="Mis comisiones"
            parent="sale.sale_order_menu"
            sequence="20"
            action="action_own_seller_commission"
            groups="seller_commission.group_own_seller_commission_viewer"/>

    <menuitem
            id="all_commissions_menu"
            name="Comisiones de vendedores"
            parent="sale.sale_order_menu"
            sequence="20"
            action="action_all_seller_commission"
            groups="seller_commission.group_seller_commission_viewer"/>


    <menuitem
            id="sales_seller_commision_rules_config"
            name="Reglas comisiones ventas"
            parent="sale.menu_sale_config"
            action="seller_commission.action_seller_commission_rules"
            sequence="25"
            groups="seller_commission.group_seller_commission_admin"/>

</odoo>
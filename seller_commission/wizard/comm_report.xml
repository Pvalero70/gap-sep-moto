        <record id="commission_report_wizard" model="ir.ui.view">
            <field name="name">Commission report wizard</field>
            <field name="model">comm.wizard.report</field>
            <field name="arch" type="xml">
                <form string="Change Product Qty">

                    <group>

                        <group>
                            <field name="month_start"/>
                            <field name="month_final"/>
                            <field name="year"/>
                        </group>
                        <group>
                            <field name="ambit"/>
                            <field name="include_paid_comms"/>
                        </group>

                    </group>
                    <footer>
                        <button name="get_report" string="Generar"  type="object" class="btn-primary"/>
                        <button string="Cancelar" class="btn-secondary" special="cancel" data-hotkey="z" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_commission_report_wizard" model="ir.actions.act_window">
            <field name="name">Reporte de comisiones</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">comm.wizard.report</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_commission_report"
            name="Comisiones de ventas"
            parent="sale.menu_sale_report"
            sequence="9"
            action="seller_commission.action_commission_report_wizard"
            groups="seller_commission.group_seller_commission_viewer"/>

    </data>
